{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_edit'|trans }}</h1>
    <h2><div>{{ app.user.email }}</div></h2>
    {{ form_start(form, { method: 'PUT', action: url('user_edit') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}