{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_region_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_region_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'region.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'region.name') }}</th>
                <th>{{ 'label_action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for region in pagination.items %}
                <tr>
                    <td>{{ region.id }}</td>
                    <td>{{ region.name }}</td>
                    <td>
                        <a href="{{ url('region_show', {id: region.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
    <p class="button">
        <a href="{{ url('home') }}" title="{{ 'action_back_to_list'|trans }}">
            {{ 'action_back_to_list'|trans }}
        </a>
    </p>
{% endblock %}