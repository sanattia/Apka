{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_trasa_details'|trans({'%id%': trasa.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_trasa_details'|trans({'%id%': trasa.id|default('')}) }}</h1>
    {% if trasa is defined and trasa|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ trasa.id }}</dd>
            <dt>{{ 'label_name'|trans }}</dt>
            <dd>{{  trasa.name }}</dd>
            <dt>{{ 'label_region'|trans }}</dt>
            <dd>{{  trasa.region.name }}</dd>
            <dt>{{ 'label_trudnosc'|trans }}</dt>
            <dd>{{  trasa.trudnosc.name }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ trasa.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ trasa.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label_czas'|trans }}</dt>
            <dd>{{  trasa.czas|date('H:i') }}</dd>
            <dt>{{ 'label_points'|trans }}</dt>
            <dd>{{  trasa.points }}</dd>
            <dt>{{ 'label_punktStartowy'|trans }}</dt>
            <dd>{{  trasa.punktStartowy }}</dd>
            <dt>{{ 'label_punktKoncowy'|trans }}</dt>
            <dd>{{  trasa.punktKoncowy }}</dd>
            <dt>{{ 'label_tags'|trans }}</dt>
            <dd>

                {% if book.tags is defined and book.tags|length %}
                    {% for tag in book.tags %}
                        {{ tag.title }}
                    {% endfor %}
                {% else %}
                    &nbsp;
                {% endif %}
            </dd>
        </dl>

    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
    <p class="button">
        <a href="{{ url('trasa_index') }}" title="{{ 'action_back_to_list'|trans }}">
            {{ 'action_back_to_list'|trans }}
        </a>
    </p>
{% endblock %}